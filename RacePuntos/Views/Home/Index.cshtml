@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  ViewBag.Title = "RacePuntos";
  ViewBag.Bienvenido = "Bienvenid@";
}

@*<h4> @ViewBag.Bienvenido @Session["NOMBRES"] @Session["APELLIDOS"] </h4>*@
<div class="container">
    @*<h1 style="font-family:  cursive; font-weight:  bolder;">RACEPUNTOS</h1>*@
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/Carousel/542701_1.jpg" style="width: 100%;height: 400px;">
                <div class="carousel-caption">
                    <h3></h3>
                    <p></p>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/Carousel/BP-fuels-Spain-Forecourt-only-1-2000x1126-1050x600.jpg" style="width: 100%;height: 400px;">
                <div class="carousel-caption">
                    <h3></h3>
                    <p></p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div style="text-align: center;font-size: 20px;font-weight: bolder;letter-spacing: 1px;">
        <p>
            Trabajando juntos los resultados serán lo mejor para el cliente y la compañia:<br>RacePuntos(SmarthTech)
        </p>
    </div>

</div>

